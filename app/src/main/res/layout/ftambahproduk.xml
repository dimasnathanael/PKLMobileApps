<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context=".produk.TambahProduk" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:textSize="@dimen/textview_size"
        android:text="Nama Produk:" />

    <EditText
        android:id="@+id/editTextProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:hint="Masukkan nama produk di sini!" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextProductName"
        android:layout_below="@+id/editTextProductName"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="@dimen/textview_size"
        android:text="Harga Pokok:" />

    <EditText
        android:id="@+id/editTextProductPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:hint="Masukkan harga pokok di sini!" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextProductPrice"
        android:layout_below="@+id/editTextProductPrice"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="@dimen/textview_size"
        android:text="Harga Jual:" />

    <EditText
        android:id="@+id/editProductSellPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:hint="Masukkan harga jual di sini!" />

    <Button
        android:id="@+id/buttonSaveProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editProductSellPrice"
        android:layout_alignParentBottom="true"
        android:text="Simpan" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonSaveProduct"
        android:layout_alignBottom="@+id/buttonSaveProduct"
        android:layout_toRightOf="@+id/buttonSaveProduct"
        android:text="Kembali" />

</RelativeLayout>